# Aleya backend environment configuration
# Copy this file to .env and adjust the values for your local setup.

# Server
PORT=5000

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/aleya
DATABASE_SSL=false

# Authentication & security
JWT_SECRET=super-secret-development-key
EMAIL_VERIFICATION_TTL_HOURS=48
EMAIL_VERIFICATION_URL=
APP_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_FILE=logs/aleya.log
LOG_LEVEL=info
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Email (required for outbound mail)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=apikey
SMTP_PASSWORD=development-secret
SMTP_FROM="Aleya <noreply@aleya.local>"
SMTP_SECURE=false

# Seed admin bootstrap (optional)
SEED_ADMIN_EMAIL=admin@aleya.local
SEED_ADMIN_PASSWORD=changeme
SEED_ADMIN_NAME=Aleya Admin

# Background jobs
MENTOR_DIGEST_WINDOW_HOURS=24
